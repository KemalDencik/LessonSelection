@model IEnumerable<Student>

@if (Model.Count() > 0)
{
    <h6 class="display-6">
        Applications(@Model.Count())
        
    </h6>
    <table class="table table-hovor table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>FullName</th>
                <th>ApplyAt</th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Student student in Model)
            {
                <tr>
                    <td>@student.Email</td>
                    <td>@student.FullName</td>
                    <td>@student.ApplyAt</td>
                    <td>@student.SelectedCourse</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        There is no application. Plesa click here to
        <a class="alert-link" asp-action="Apply">Apply.</a>

    </div>
}
